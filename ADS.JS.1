// Lista inicial de candidatos
let candidatos = ["Lucas", "Ana", "Pedro", "Beatriz"];

// Ordenando em ordem alfabética
candidatos.sort();

console.log("Lista de candidatos (ordenada):");
console.log(candidatos);
console.log("----------------------------------");

// Horários disponíveis
const horarios = ["10:00", "14:00"];

// Função para agendar entrevista
function agendarEntrevista(nome, horarioEscolhido) {
  // Verifica se o nome está na lista
  if (candidatos.includes(nome)) {
    // Verifica se o horário existe
    if (horarios.includes(horarioEscolhido)) {
      console.log(`Entrevista agendada com ${nome} às ${horarioEscolhido}.`);
    } else {
      console.log("Horário inválido. Escolha 10:00 ou 14:00.");
    }
  } else {
    console.log("Nome não encontrado na lista de candidatos.");
  }
}

// Exemplos de uso:
agendarEntrevista("Ana", "10:00");     // OK
agendarEntrevista("Beatriz", "15:00"); // Horário inválido
agendarEntrevista("Marcos", "14:00");  // Nome não está na lista
